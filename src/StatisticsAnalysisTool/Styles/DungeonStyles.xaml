    <DataTemplate x:Key="DungeonNotificationFragment" DataType="{x:Type dungeon:Dungeon}">
        <Border BorderBrush="{StaticResource SolidColorBrush.Background.2}" BorderThickness="0,0,0,1" Visibility="{Binding Visibility}">
            <Grid Height="96" Margin="0">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Status, IsAsync=True}" Value="{x:Static enumerations:DungeonStatus.Active}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="{StaticResource Color.Background.2}" Offset="0.0"/>
                                            <GradientStop Color="{StaticResource Color.Accent.Blue.5}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Status, IsAsync=True}" Value="{x:Static enumerations:DungeonStatus.Done}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="{StaticResource Color.Background.2}" Offset="0.0"/>
                                            <GradientStop Color="{StaticResource Color.Background.1}" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <StackPanel Orientation="Vertical" Style="{StaticResource DungeonNotificationFragment.Faction}">
                    <DockPanel>
                        <Grid HorizontalAlignment="Left" Style="{StaticResource DungeonNotificationFragment.Grid.DungeonMode}" />
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Width" Value="35"/>
                                        <Setter Property="Margin" Value="5,0,0,0"/>
                                        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.5}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Level}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.3}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="1">
                                                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.2}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="2">
                                                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Item.Level.Color.1}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="3">
                                                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Item.Level.Color.2}" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Level}" Value="4">
                                                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Item.Level.Color.3}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}{1}">
                                        <Binding Path="TierString" FallbackValue="?" />
                                        <Binding Path="LevelString" FallbackValue="?" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <ContentPresenter ContentTemplate="{StaticResource DungeonNotificationFragment.MapTypeIcon.Template}" Content="{Binding}"/>
                        </StackPanel>
                        <Grid Height="96">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Height="24" Margin="0">
                                    <Label Content="{Binding DungeonNumber, IsAsync=True, FallbackValue=0}" ContentStringFormat="{}[{0}]" MinWidth="38" 
                                       VerticalAlignment="Center" Foreground="{StaticResource SolidColorBrush.Text.1}"/>
                                    <Label MinWidth="135" VerticalAlignment="Center" Margin="0 0 5 0" Foreground="{StaticResource SolidColorBrush.Text.1}">
                                        <Label.Content>
                                            <TextBlock>
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0}" ConverterCulture="{x:Static com:LanguageController.CurrentCultureInfo}">
                                                        <Binding Path="EnterDungeonFirstTime" FallbackValue="00.00.0000 00:00:00" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </Label.Content>
                                    </Label>
                                    <Label Content="{Binding MainMapName, IsAsync=True, FallbackValue=UNKNOWN}" 
                                       Style="{StaticResource DungeonNotificationFragment.MainMapName}" MinWidth="138" />
                                    <Grid Margin="5 0 20 0">
                                        <StackPanel Orientation="Horizontal" MinWidth="210">
                                            <ItemsControl ItemsSource="{Binding DungeonChestsFragments, IsAsync=True}" ItemTemplate="{StaticResource DungeonEventObjectFragmentTemplate}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Rows="1"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                    <Grid ZIndex="5" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-20 0 0 0" ToolTip="{Binding DiedMessage}">
                                        <Image Style="{StaticResource DungeonNotificationFragment.Image.Skull}" />
                                    </Grid>
                                    <Grid Margin="0,0,0,0" Width="16" Height="16" VerticalAlignment="Center" 
                                      ToolTip="{Binding TranslationDungeonRunTime, FallbackValue=DUNGEON__RUN__TIME}">
                                        <fa5:ImageAwesome Icon="Regular_Clock" Foreground="{StaticResource SolidColorBrush.Text.1}" />
                                    </Grid>
                                    <Label Content="{Binding RunTimeString, IsAsync=True, FallbackValue=00:00:00}" ContentStringFormat="{}{0}" VerticalAlignment="Center" 
                                       Margin="3 0 10 0" MinWidth="55">
                                        <Label.Style>
                                            <Style TargetType="Label">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsBestTime}" Value="true">
                                                        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Accent.Yellow.1}" />
                                                        <Setter Property="Effect">
                                                            <Setter.Value>
                                                                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="1" Color="{StaticResource Color.Accent.Yellow.2}"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsBestTime}" Value="false">
                                                        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.1}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Label.Style>
                                    </Label>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Height="24">
                                    <Grid HorizontalAlignment="Center" Margin="5,0,0,0" VerticalAlignment="Center" 
                                          ToolTip="{Binding TranslationDungeonFame, FallbackValue=DUNGEON__FAME}">
                                        <Image Source="../Resources/fame.png" Style="{StaticResource LineFragmentImageStyle}" />
                                    </Grid>
                                    <Label Content="{Binding Fame, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                           Style="{StaticResource DungeonNotificationFragment.BestFame}" VerticalAlignment="Center" 
                                           Margin="0 0 10 0" MinWidth="75">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding Fame}"
                                                ContentStringFormat="{}{0:N0}"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ToolTip="{Binding TranslationDungeonReSpec, FallbackValue=DUNGEON__RESPEC}">
                                        <Image Source="../Resources/respec.png" Style="{StaticResource LineFragmentImageStyle}" />
                                    </Grid>
                                    <Label Content="{Binding ReSpec, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                           Style="{StaticResource DungeonNotificationFragment.BestReSpec}" VerticalAlignment="Center" 
                                           Margin="0 0 10 0" MinWidth="75">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding ReSpec}"
                                                ContentStringFormat="{}{0:N0}"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ToolTip="{Binding TranslationDungeonSilver, FallbackValue=DUNGEON__SILVER}">
                                        <Image Source="../Resources/silver.png" Style="{StaticResource LineFragmentImageStyle}" />
                                    </Grid>
                                    <Label Content="{Binding Silver, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                           Style="{StaticResource DungeonNotificationFragment.BestSilver}" VerticalAlignment="Center" 
                                           Margin="0 0 10 0" MinWidth="75">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding Silver}"
                                                ContentStringFormat="{}{0:N0}"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ToolTip="{Binding TranslationDungeonFamePerHour, FallbackValue=DUNGEON__FAME__PER__HOUR}">
                                        <Image Source="../Resources/fame.png" Style="{StaticResource LineFragmentImageStyle}" />
                                    </Grid>
                                    <Label Content="{Binding FamePerHour, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                           ContentStringFormat="{}{0:N0}/h" Style="{StaticResource DungeonNotificationFragment.BestFamePerHour}" VerticalAlignment="Center" Margin="0 0 10 0" MinWidth="85">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding FamePerHour}"
                                                ContentStringFormat="{}{0:N0}/h"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ToolTip="{Binding TranslationDungeonReSpecPerHour, FallbackValue=DUNGEON__RESPEC__PER__HOUR}">
                                        <Image Source="../Resources/respec.png" Style="{StaticResource LineFragmentImageStyle}" />
                                    </Grid>
                                    <Label Content="{Binding ReSpecPerHour, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                           ContentStringFormat="{}{0:N0}/h" Style="{StaticResource DungeonNotificationFragment.BestReSpecPerHour}" VerticalAlignment="Center" Margin="0 0 10 0" MinWidth="85">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding ReSpecPerHour}"
                                                ContentStringFormat="{}{0:N0}/h"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          ToolTip="{Binding TranslationDungeonSilverPerHour, FallbackValue=DUNGEON__SILVER__PER__HOUR}">
                                        <Image Source="../Resources/silver.png" Style="{StaticResource LineFragmentImageStyle}" />
                                    </Grid>
                                    <Label Content="{Binding SilverPerHour, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                   ContentStringFormat="{}{0:N0}/h" Style="{StaticResource DungeonNotificationFragment.BestSilverPerHour}" VerticalAlignment="Center" Margin="0 0 10 0" MinWidth="85">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding SilverPerHour}"
                                                ContentStringFormat="{}{0:N0}/h"
                                            />
                                        </Label.ToolTip>
                                    </Label>
                                </StackPanel>

                                <!-- Faction points and coins -->
                                <StackPanel Orientation="Horizontal" Height="24" Visibility="{Binding IsFactionWarfareVisible, FallbackValue=Collapsed}">
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,0,2,0">
                                        <Image Style="{StaticResource Tracker.Fraction.Flag.Icon}" ToolTip="{Binding TranslationFactionFlags, FallbackValue=FACTION__FLAGS}"/>
                                    </Grid>
                                    <Label Content="{Binding FactionFlags, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                       ContentStringFormat="{}{0:N0}" Style="{StaticResource DungeonNotificationFragment.BestFactionFlags}" VerticalAlignment="Center" Margin="0 0 5 0" MinWidth="82">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding FactionFlags}"
                                                ContentStringFormat="{}{0:N0}"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Image Style="{StaticResource Tracker.Fraction.Flag.Icon}" ToolTip="{Binding TranslationFactionFlagsPerHour, FallbackValue=FACTION__FLAGS__PER__HOUR}"/>
                                    </Grid>
                                    <Label Content="{Binding FactionFlagsPerHour, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                       ContentStringFormat="{}{0:N0}/h" Style="{StaticResource DungeonNotificationFragment.BestFactionFlagsPerHour}" VerticalAlignment="Center" Margin="0 0 5 0" MinWidth="80">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding FactionFlagsPerHour}"
                                                ContentStringFormat="{}{0:N0}/h"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0">
                                        <Image Style="{StaticResource Tracker.Fraction.Coin.Icon}" ToolTip="{Binding TranslationFactionCoins, FallbackValue=FACTION__COINS}"/>
                                    </Grid>
                                    <Label Content="{Binding FactionCoins, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                       ContentStringFormat="{}{0:N0}" Style="{StaticResource DungeonNotificationFragment.BestFactionCoins}" VerticalAlignment="Center" Margin="0 0 5 0" MinWidth="85">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding FactionCoins}"
                                                ContentStringFormat="{}{0:N0}"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="{Binding IsFactionWarfareVisible, FallbackValue=Collapsed}">
                                        <Image Style="{StaticResource Tracker.Fraction.Coin.Icon}" ToolTip="{Binding TranslationFactionCoinsPerHour, FallbackValue=FACTION__COINS__PER__HOUR}"/>
                                    </Grid>
                                    <Label Content="{Binding FactionCoinsPerHour, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                       ContentStringFormat="{}{0:N0}/h" Style="{StaticResource DungeonNotificationFragment.BestFactionCoinsPerHour}" VerticalAlignment="Center" Margin="1 0 5 0" MinWidth="205">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding FactionCoinsPerHour}"
                                                ContentStringFormat="{}{0:N0}/h"
                                            />
                                        </Label.ToolTip>
                                    </Label>
                                </StackPanel>

                                <!-- Might - Favor -->
                                <StackPanel Orientation="Horizontal" Height="24" Visibility="{Binding IsMightFavorVisible, FallbackValue=Collapsed}">
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,2,2,0">
                                        <Image Height="16" Width="16" Source="../Resources/might.png" ToolTip="{Binding TranslationMight, FallbackValue=MIGHT}" />
                                    </Grid>
                                    <Label Content="{Binding Might, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" ContentStringFormat="{}{0:N0}" 
                                           Style="{StaticResource DungeonNotificationFragment.BestMight}" VerticalAlignment="Center" Margin="0 0 5 0" MinWidth="82">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding Might}"
                                                ContentStringFormat="{}{0:N0}"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,0,0">
                                        <Image Height="16" Width="16" Source="../Resources/might.png" ToolTip="{Binding TranslationMightPerHour, FallbackValue=MIGHT__PER__HOUR}" />
                                    </Grid>
                                    <Label Content="{Binding MightPerHour, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                       ContentStringFormat="{}{0:N0}/h" Style="{StaticResource DungeonNotificationFragment.BestMightPerHour}" VerticalAlignment="Center" Margin="0 0 5 0" MinWidth="80">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding MightPerHour}"
                                                ContentStringFormat="{}{0:N0}/h"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,2,0,0">
                                        <Image Height="16" Width="16" Source="../Resources/favor.png" ToolTip="{Binding TranslationFavor, FallbackValue=Favor}" />
                                    </Grid>
                                    <Label Content="{Binding Favor, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                       ContentStringFormat="{}{0:N0}" Style="{StaticResource DungeonNotificationFragment.BestFavor}" VerticalAlignment="Center" Margin="0 0 5 0" MinWidth="85">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding Favor}"
                                                ContentStringFormat="{}{0:N0}"
                                            />
                                        </Label.ToolTip>
                                    </Label>

                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,2,0,0">
                                        <Image Height="16" Width="16" Source="../Resources/favor.png" ToolTip="{Binding TranslationFavorPerHour, FallbackValue=FAVOR__PER__HOUR}" />
                                    </Grid>
                                    <Label Content="{Binding FavorPerHour, Converter={StaticResource ShortNumberConverter}, ConverterCulture={x:Static glob:CultureInfo.CurrentCulture}, IsAsync=True, FallbackValue=-}" 
                                       ContentStringFormat="{}{0:N0}/h" Style="{StaticResource DungeonNotificationFragment.BestFavorPerHour}" VerticalAlignment="Center" Margin="1 0 5 0" MinWidth="205">
                                        <Label.ToolTip>
                                            <ToolTip 
                                                Content="{Binding FavorPerHour}"
                                                ContentStringFormat="{}{0:N0}/h"
                                            />
                                        </Label.ToolTip>
                                    </Label>
                                </StackPanel>

                                <!-- Loot -->
                                <StackPanel Orientation="Horizontal" Height="24">
                                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,0,1,0">
                                        <Image Height="16" Width="16" Source="../Assets/static_chest.png" ToolTip="{Binding TranslationTotalLootedValue, FallbackValue=TOTAL_LOOTED_VALUE}" />
                                    </Grid>
                                    <Label Content="{Binding TotalLootValue, IsAsync=True, FallbackValue=-}" ContentStringFormat="{}{0:N0}" 
                                           VerticalAlignment="Center" Margin="0" MinWidth="82" />

                                    <Label Content="{Binding TranslationBestLootedItem, IsAsync=True, FallbackValue=BEST__LOOTED__ITEM}" ContentStringFormat="{}{0}:" 
                                           VerticalAlignment="Center" />
