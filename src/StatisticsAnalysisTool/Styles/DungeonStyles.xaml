    <DataTemplate x:Key="DungeonStatsTemplate" DataType="{x:Type models:DungeonStats}">
        <Grid>
            <DockPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/fame.png" Width="22" Height="22" ToolTip="{Binding TranslationFame, FallbackValue=FAME}" />
                    <TextBlock Text="{Binding Fame, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding FamePerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding FameAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/silver.png" Width="22" Height="22" ToolTip="{Binding TranslationSilver, FallbackValue=SILVER}" />
                    <TextBlock Text="{Binding Silver, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding SilverPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding SilverAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/respec.png" Width="22" Height="22" ToolTip="{Binding TranslationReSpec, FallbackValue=RESPEC}" />
                    <TextBlock Text="{Binding ReSpec, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding ReSpecPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding ReSpecAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0,10,0">
                    <Image Source="../Resources/might.png" Width="22" Height="22" ToolTip="{Binding TranslationMight, FallbackValue=MIGHT}" />
                    <TextBlock Text="{Binding Might, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding MightPerHour, Converter={StaticResource ValuePerHourConverter}, FallbackValue=0 /h}" Style="{StaticResource Dungeons.Stats.Value}" />
                    <TextBlock Text="{Binding MightAverage, Converter={StaticResource ValueAvgConverter}, FallbackValue=0 .Avg}" Style="{StaticResource Dungeons.Stats.Value}" Margin="0,0,0,5" />
                </StackPanel>
