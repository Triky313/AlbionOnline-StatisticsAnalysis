    <Style TargetType="Image" x:Key="Donation.Image.Silver.Style">
        <Setter Property="Source" Value="../Resources/silver.png" />
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Width" Value="26" />
        <Setter Property="Height" Value="26" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsDonationRealMoney}" Value="false">
                <Setter Property="Visibility" Value="Visible" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="fa5:ImageAwesome" x:Key="Donation.Image.RealMoney.Style">
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.1}" />
        <Setter Property="Icon" Value="Solid_DollarSign" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="TextBlock" x:Key="Donation.TextBlock.RealMoney.Style">
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.1}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="MinWidth" Value="160" />
        <Setter Property="Margin" Value="0,0,0,0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style TargetType="TextBlock" x:Key="Donation.TextBlock.Server.Style">
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.Text.5}" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="MinWidth" Value="160" />
        <Setter Property="Margin" Value="5,0,0,0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <DataTemplate x:Key="Donation" DataType="{x:Type models:Donation}">
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Horizontal" Visibility="{Binding DonationSilverVisibility}">
                <Image Style="{StaticResource Donation.Image.Silver.Style}" ToolTip="{Binding TranslationSilver}" />
                <StackPanel Orientation="Vertical">
                    <TextBlock Style="{StaticResource Donation.TextBlock.RealMoney.Style}" Text="{Binding Amount, StringFormat='{} {0:N0}'}" />
                    <TextBlock Style="{StaticResource Donation.TextBlock.Server.Style}" Text="{Binding DonationServer}" />
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Visibility="{Binding DonationRealMoneyVisibility}">
                <fa5:ImageAwesome Style="{StaticResource Donation.Image.RealMoney.Style}" />
                <TextBlock Style="{StaticResource Donation.TextBlock.RealMoney.Style}" Text="{Binding RealMoneyAmount, StringFormat='{} {0:N2}'}" />
            </StackPanel>

            <Image Style="{StaticResource Donation.Icon.Style}" />
            <TextBlock Text="{Binding Contributor}" MinWidth="200" FontSize="20" VerticalAlignment="Center" Foreground="{StaticResource SolidColorBrush.Text.1}" />
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>