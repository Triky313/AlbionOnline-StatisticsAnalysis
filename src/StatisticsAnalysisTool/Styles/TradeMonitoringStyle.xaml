    <Style TargetType="Image" x:Key="Trade.Icon">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="50"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="Trade.City.Text">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Text" Value="{Binding LocationName, IsAsync=True}" />
        <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.Default}" />
