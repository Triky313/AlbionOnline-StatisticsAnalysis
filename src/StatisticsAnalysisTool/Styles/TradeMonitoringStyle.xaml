            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="BridgewatchPortal">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.Bridgewatch}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="MartlockMarket">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.Martlock}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="MartlockPortal">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.Martlock}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="LymhurstMarket">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.Lymhurst}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="LymhurstPortal">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.Lymhurst}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="FortSterlingMarket">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.FortSterling}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="FortSterlingPortal">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.FortSterling}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="BrecilienMarket">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.Brecilien}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="ArthursRest">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.ArthursRest}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Location, IsAsync=True}" Value="MerlynsRest">
                <Setter Property="Foreground" Value="{StaticResource SolidColorBrush.City.MerlynsRest}" />
