                    <GridView>
                        <GridViewColumn x:Name="GvcNmlIcon" Header="ICON" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Background="{StaticResource SolidColorBrush.Background.First}">
